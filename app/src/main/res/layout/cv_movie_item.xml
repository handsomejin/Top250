<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/tv_renking_number"
            android:textStyle="bold|italic"
            android:padding="10dp"/>


        <android.support.v7.widget.CardView
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_toEndOf="@id/tv_renking_number"
            android:layout_marginTop="5dp"
            android:id="@+id/cv_movie_pic"
            app:cardCornerRadius="0dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/iv_movie_pic"
                android:scaleType="centerCrop"/>
        </android.support.v7.widget.CardView>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/cv_movie_pic"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_movie_name"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_toEndOf="@id/cv_movie_pic"
            android:layout_below="@id/tv_movie_name"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:id="@+id/ll_star_container">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/star_32"
                android:layout_marginLeft="2dp"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/star_32"
                android:layout_marginLeft="2dp"
                />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/star_32"
                android:layout_marginLeft="2dp"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/star_32"
                android:layout_marginLeft="2dp"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:id="@+id/iv_the_last_star"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:id="@+id/tv_rating_number" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/cv_movie_pic"
            android:layout_below="@id/ll_star_container"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_movie_genras"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_movie_year"
            android:layout_toEndOf="@id/tv_movie_genras"
            android:layout_below="@id/ll_star_container"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>